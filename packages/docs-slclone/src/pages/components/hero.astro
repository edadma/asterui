---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  WithButtonDemo,
  WithFigureDemo,
  OverlayDemo,
} from '../../components/HeroDemo';
import HeroDemoSource from '../../components/HeroDemo.tsx?raw';

const api = [
  { property: 'children', description: 'Hero content', type: 'React.ReactNode' },
  { property: 'overlay', description: 'Show overlay effect (for background images)', type: 'boolean', default: 'false' },
  { property: 'contentClassName', description: 'CSS classes for the content wrapper', type: 'string' },
  { property: 'className', description: 'Additional CSS classes', type: 'string' },
  { property: 'style', description: 'Inline styles (useful for background images)', type: 'React.CSSProperties' },
];
---

<ComponentLayout
  name="Hero"
  description="Create impactful landing page sections with hero banners and backgrounds."
  api={api}
>
  <Example title="Basic Hero" description="Simple hero section with title and subtitle." source={HeroDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Hero with CTA Button" description="Hero section with a call-to-action button." source={HeroDemoSource} fn="WithButtonDemo">
    <WithButtonDemo client:load slot="demo" />
  </Example>

  <Example title="Hero with Figure" description="Hero with side image or figure element." source={HeroDemoSource} fn="WithFigureDemo">
    <WithFigureDemo client:load slot="demo" />
  </Example>

  <Example title="Hero with Background Overlay" description="Hero with background image and overlay effect." source={HeroDemoSource} fn="OverlayDemo">
    <OverlayDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Use semantic heading elements (h1, h2) for hero titles</li>
      <li>Ensure sufficient color contrast between text and background</li>
      <li>Provide alt text for hero images</li>
      <li>Make CTA buttons keyboard accessible</li>
    </ul>
  </section>
</ComponentLayout>
