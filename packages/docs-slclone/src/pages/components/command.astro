---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  CompoundDemo,
  WithIconsDemo,
  KeywordsDemo,
  NestedPagesDemo,
  DisabledItemsDemo,
  CustomShortcutDemo,
  CustomFilterDemo,
} from '../../components/CommandDemo';
import CommandDemoSource from '../../components/CommandDemo.tsx?raw';

const api = [
  { property: 'open', description: 'Controlled open state', type: 'boolean', default: '-' },
  { property: 'onOpenChange', description: 'Callback when open state changes', type: '(open: boolean) => void', default: '-' },
  { property: 'defaultOpen', description: 'Default open state (uncontrolled)', type: 'boolean', default: 'false' },
  { property: 'items', description: 'Data-driven item configuration', type: 'CommandItemConfig[]', default: '-' },
  { property: 'filter', description: 'Custom filter function', type: '(value: string, search: string, keywords?: string[]) => boolean', default: '-' },
  { property: 'loop', description: 'Loop keyboard navigation at edges', type: 'boolean', default: 'true' },
  { property: 'shortcut', description: 'Global keyboard shortcut key(s)', type: 'string[]', default: "['k']" },
  { property: 'placeholder', description: 'Search input placeholder', type: 'string', default: "'Type a command or search...'" },
  { property: 'emptyMessage', description: 'Message when no results found', type: 'ReactNode', default: "'No results found.'" },
];

const itemConfigApi = [
  { property: 'key', description: 'Unique key for the item', type: 'string', default: '-' },
  { property: 'label', description: 'Display label', type: 'ReactNode', default: '-' },
  { property: 'group', description: 'Group name for categorization', type: 'string', default: '-' },
  { property: 'keywords', description: 'Additional search keywords', type: 'string[]', default: '-' },
  { property: 'disabled', description: 'Disable the item', type: 'boolean', default: 'false' },
  { property: 'onSelect', description: 'Callback when item is selected', type: '() => void', default: '-' },
  { property: 'icon', description: 'Icon element to display', type: 'ReactNode', default: '-' },
];

const compoundApi = [
  { property: 'Command.List', description: 'Container for groups and items', type: 'Component', default: '-' },
  { property: 'Command.Group', description: 'Groups items with optional heading', type: 'Component', default: '-' },
  { property: 'Command.Item', description: 'Selectable command item', type: 'Component', default: '-' },
  { property: 'Command.Empty', description: 'Shown when no results match', type: 'Component', default: '-' },
  { property: 'Command.Page', description: 'Nested page for navigation', type: 'Component', default: '-' },
  { property: 'Command.Separator', description: 'Visual separator between sections', type: 'Component', default: '-' },
];
---

<ComponentLayout
  name="Command"
  description="A command palette (⌘K) for quick search and actions. Supports keyboard navigation, grouped items, nested pages, and both data-driven and compound component patterns."
  api={api}
>
  <Example title="Basic Usage" description="Data-driven command palette with grouped items." source={CommandDemoSource} fn="BasicDemo">
    <BasicDemo client:only="react" slot="demo" />
  </Example>

  <Example title="Compound Components" description="Build command palettes using compound components for more control." source={CommandDemoSource} fn="CompoundDemo">
    <CompoundDemo client:only="react" slot="demo" />
  </Example>

  <Example title="With Icons" description="Add icons to command items for visual context." source={CommandDemoSource} fn="WithIconsDemo">
    <WithIconsDemo client:only="react" slot="demo" />
  </Example>

  <Example title="Search Keywords" description="Add extra keywords to make items findable by alternative terms." source={CommandDemoSource} fn="KeywordsDemo">
    <KeywordsDemo client:only="react" slot="demo" />
  </Example>

  <Example title="Nested Pages" description="Navigate to sub-pages with back navigation support. Press Backspace (when search is empty) or click the back arrow to return." source={CommandDemoSource} fn="NestedPagesDemo">
    <NestedPagesDemo client:only="react" slot="demo" />
  </Example>

  <Example title="Disabled Items" description="Disable specific items to prevent selection." source={CommandDemoSource} fn="DisabledItemsDemo">
    <DisabledItemsDemo client:only="react" slot="demo" />
  </Example>

  <Example title="Custom Shortcut" description="Change the global keyboard shortcut from ⌘K to another key." source={CommandDemoSource} fn="CustomShortcutDemo">
    <CustomShortcutDemo client:only="react" slot="demo" />
  </Example>

  <Example title="Custom Filter" description="Provide a custom filter function for advanced matching logic." source={CommandDemoSource} fn="CustomFilterDemo">
    <CustomFilterDemo client:only="react" slot="demo" />
  </Example>

  <section class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Item Configuration</h2>
    <p class="mb-4 text-base-content/80">When using the data-driven <code class="bg-base-content/20 px-1 rounded">items</code> prop:</p>
    <div class="overflow-x-auto">
      <table class="table table-zebra w-full">
        <thead>
          <tr>
            <th>Property</th>
            <th>Description</th>
            <th>Type</th>
            <th>Default</th>
          </tr>
        </thead>
        <tbody>
          {itemConfigApi.map(row => (
            <tr>
              <td><code class="bg-base-content/20 px-1 rounded">{row.property}</code></td>
              <td>{row.description}</td>
              <td><code class="text-xs">{row.type}</code></td>
              <td><code class="text-xs">{row.default}</code></td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </section>

  <section class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Compound Components</h2>
    <p class="mb-4 text-base-content/80">For more control, use compound components:</p>
    <div class="overflow-x-auto">
      <table class="table table-zebra w-full">
        <thead>
          <tr>
            <th>Component</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          {compoundApi.map(row => (
            <tr>
              <td><code class="bg-base-content/20 px-1 rounded">{row.property}</code></td>
              <td>{row.description}</td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </section>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Uses native <code class="bg-base-content/20 px-1 rounded">&lt;dialog&gt;</code> element for focus trapping and ESC handling</li>
      <li>Search input has <code class="bg-base-content/20 px-1 rounded">role="combobox"</code> with proper ARIA attributes</li>
      <li>List uses <code class="bg-base-content/20 px-1 rounded">role="listbox"</code> with <code class="bg-base-content/20 px-1 rounded">role="option"</code> items</li>
      <li>Keyboard navigation with Arrow keys, Enter to select, Escape to close</li>
      <li><code class="bg-base-content/20 px-1 rounded">aria-activedescendant</code> tracks the highlighted item</li>
      <li>Groups use <code class="bg-base-content/20 px-1 rounded">role="group"</code> with <code class="bg-base-content/20 px-1 rounded">aria-label</code></li>
    </ul>
  </section>

  <section class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Keyboard Shortcuts</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li><kbd class="kbd kbd-sm">⌘K</kbd> / <kbd class="kbd kbd-sm">Ctrl+K</kbd> - Open command palette (customizable)</li>
      <li><kbd class="kbd kbd-sm">↑</kbd> <kbd class="kbd kbd-sm">↓</kbd> - Navigate items</li>
      <li><kbd class="kbd kbd-sm">Enter</kbd> - Select highlighted item</li>
      <li><kbd class="kbd kbd-sm">Escape</kbd> - Close palette (or go back on nested page)</li>
      <li><kbd class="kbd kbd-sm">Backspace</kbd> - Go back to previous page (when search is empty)</li>
    </ul>
  </section>
</ComponentLayout>
