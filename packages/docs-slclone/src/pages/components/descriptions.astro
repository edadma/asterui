---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  BorderedDemo,
  SizesDemo,
  VerticalDemo,
  ColumnsDemo,
  WithSpanDemo,
  FilledSpanDemo,
  TitleExtraDemo,
  NoColonDemo,
  CustomStylesDemo,
  CompoundDemo,
  ResponsiveDemo,
} from '../../components/DescriptionsDemo';
import DescriptionsDemoSource from '../../components/DescriptionsDemo.tsx?raw';

const api = [
  { title: 'Descriptions', data: [
    { property: 'items', description: 'Description items (alternative to children)', type: 'DescriptionsItemConfig[]' },
    { property: 'title', description: 'Title of the descriptions block', type: 'React.ReactNode' },
    { property: 'extra', description: 'Extra content in the top-right corner', type: 'React.ReactNode' },
    { property: 'column', description: 'Number of columns (or responsive config)', type: 'number | { xs?, sm?, md?, lg?, xl?, 2xl? }', default: '3' },
    { property: 'bordered', description: 'Show borders around cells', type: 'boolean', default: 'false' },
    { property: 'layout', description: 'Layout direction', type: "'horizontal' | 'vertical'", default: "'horizontal'" },
    { property: 'size', description: 'Size variant', type: "'sm' | 'md' | 'lg'", default: "'md'" },
    { property: 'colon', description: 'Show colon after labels', type: 'boolean', default: 'true' },
    { property: 'styles', description: 'Semantic styles for component parts', type: 'Partial<Record<SemanticDOM, CSSProperties>>' },
    { property: 'classNames', description: 'Semantic classNames for component parts', type: 'Partial<Record<SemanticDOM, string>>' },
    { property: 'labelStyle', description: 'Default label styles (deprecated, use styles.label)', type: 'React.CSSProperties' },
    { property: 'contentStyle', description: 'Default content styles (deprecated, use styles.content)', type: 'React.CSSProperties' },
    { property: 'className', description: 'Additional CSS classes', type: 'string' },
    { property: 'style', description: 'Inline styles for root element', type: 'React.CSSProperties' },
    { property: 'data-testid', description: 'Test ID for the component', type: 'string', default: "'descriptions'" },
  ]},
  { title: 'DescriptionsItemConfig', data: [
    { property: 'key', description: 'Unique key for the item (used for test IDs and React keys)', type: 'string' },
    { property: 'label', description: 'Label for the item', type: 'React.ReactNode' },
    { property: 'children', description: 'Content of the item', type: 'React.ReactNode' },
    { property: 'span', description: "Number of columns to span, or 'filled' to fill remaining space", type: "number | 'filled'", default: '1' },
    { property: 'labelStyle', description: 'Custom label styles', type: 'React.CSSProperties' },
    { property: 'contentStyle', description: 'Custom content styles', type: 'React.CSSProperties' },
    { property: 'labelClassName', description: 'Custom label class', type: 'string' },
    { property: 'contentClassName', description: 'Custom content class', type: 'string' },
  ]},
  { title: 'Descriptions.Item (compound)', data: [
    { property: 'key', description: 'React key, extracted by parent', type: 'string' },
    { property: 'itemKey', description: 'Explicit key (alternative to React key)', type: 'string' },
    { property: 'label', description: 'Label for the item', type: 'React.ReactNode' },
    { property: 'children', description: 'Content of the item', type: 'React.ReactNode' },
    { property: 'span', description: "Number of columns to span, or 'filled'", type: "number | 'filled'", default: '1' },
    { property: 'labelStyle', description: 'Custom label styles', type: 'React.CSSProperties' },
    { property: 'contentStyle', description: 'Custom content styles', type: 'React.CSSProperties' },
    { property: 'labelClassName', description: 'Custom label class', type: 'string' },
    { property: 'contentClassName', description: 'Custom content class', type: 'string' },
  ]},
  { title: 'SemanticDOM keys', data: [
    { property: 'root', description: 'Root container element', type: '-' },
    { property: 'header', description: 'Header containing title and extra', type: '-' },
    { property: 'title', description: 'Title element', type: '-' },
    { property: 'extra', description: 'Extra content element', type: '-' },
    { property: 'table', description: 'Table element', type: '-' },
    { property: 'label', description: 'Label cells (th elements)', type: '-' },
    { property: 'content', description: 'Content cells (td elements)', type: '-' },
  ]},
];
---

<ComponentLayout
  name="Descriptions"
  description="Display key-value pairs in a structured, readable format."
  api={api}
>
  <Example title="Basic Descriptions" description="Simple key-value display." source={DescriptionsDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Bordered" description="Descriptions with borders." source={DescriptionsDemoSource} fn="BorderedDemo">
    <BorderedDemo client:load slot="demo" />
  </Example>

  <Example title="Sizes" description="Different size variants." source={DescriptionsDemoSource} fn="SizesDemo">
    <SizesDemo client:load slot="demo" />
  </Example>

  <Example title="Title with Extra" description="Title and extra content in the header." source={DescriptionsDemoSource} fn="TitleExtraDemo">
    <TitleExtraDemo client:load slot="demo" />
  </Example>

  <Example title="Vertical Layout" description="Vertical label and content layout." source={DescriptionsDemoSource} fn="VerticalDemo">
    <VerticalDemo client:load slot="demo" />
  </Example>

  <Example title="Custom Columns" description="Control the number of columns." source={DescriptionsDemoSource} fn="ColumnsDemo">
    <ColumnsDemo client:load slot="demo" />
  </Example>

  <Example title="Responsive Columns" description="Columns adjust based on viewport width." source={DescriptionsDemoSource} fn="ResponsiveDemo">
    <ResponsiveDemo client:load slot="demo" />
  </Example>

  <Example title="With Column Span" description="Items spanning multiple columns." source={DescriptionsDemoSource} fn="WithSpanDemo">
    <WithSpanDemo client:load slot="demo" />
  </Example>

  <Example title="Filled Span" description="Items that fill the remaining row space." source={DescriptionsDemoSource} fn="FilledSpanDemo">
    <FilledSpanDemo client:load slot="demo" />
  </Example>

  <Example title="No Colon" description="Hide the colon after labels." source={DescriptionsDemoSource} fn="NoColonDemo">
    <NoColonDemo client:load slot="demo" />
  </Example>

  <Example title="Custom Styles" description="Apply custom styles and classes to semantic parts." source={DescriptionsDemoSource} fn="CustomStylesDemo">
    <CustomStylesDemo client:load slot="demo" />
  </Example>

  <Example title="Compound Pattern" description="Use Descriptions.Item children instead of items prop." source={DescriptionsDemoSource} fn="CompoundDemo">
    <CompoundDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Uses semantic <code class="bg-base-content/20 px-1 rounded">&lt;table&gt;</code> markup for proper structure</li>
      <li>Header cells use <code class="bg-base-content/20 px-1 rounded">scope</code> attribute for screen readers</li>
      <li>Table has <code class="bg-base-content/20 px-1 rounded">&lt;caption&gt;</code> element (visually hidden) when title is provided</li>
      <li>Content cells have <code class="bg-base-content/20 px-1 rounded">aria-labelledby</code> linking to their labels</li>
      <li>Colons after labels are marked with <code class="bg-base-content/20 px-1 rounded">aria-hidden</code> to avoid redundant announcements</li>
    </ul>
  </section>
</ComponentLayout>
