---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  WithSectionsDemo,
  CenteredDemo,
} from '../../components/FooterDemo';
import FooterDemoSource from '../../components/FooterDemo.tsx?raw';

const api = [
  { title: 'Footer', data: [
    { property: 'children', description: 'Footer content', type: 'React.ReactNode' },
    { property: 'center', description: 'Center the footer content', type: 'boolean', default: 'false' },
    { property: 'horizontal', description: 'Display columns horizontally', type: 'boolean', default: 'false' },
    { property: 'vertical', description: 'Display columns vertically (default)', type: 'boolean', default: 'false' },
    { property: 'className', description: 'Additional CSS classes', type: 'string' },
  ]},
  { title: 'Footer.Title', data: [
    { property: 'children', description: 'Title text', type: 'React.ReactNode' },
    { property: 'className', description: 'Additional CSS classes', type: 'string' },
  ]},
];
---

<ComponentLayout
  name="Footer"
  description="Page footer component with support for links, sections, and centered layouts."
  api={api}
>
  <Example title="Basic Footer" description="Simple left-aligned footer with horizontal links." source={FooterDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Footer with Sections" description="Footer with titled sections in columns." source={FooterDemoSource} fn="WithSectionsDemo">
    <WithSectionsDemo client:load slot="demo" />
  </Example>

  <Example title="Centered Footer" description="Footer with centered content." source={FooterDemoSource} fn="CenteredDemo">
    <CenteredDemo client:load slot="demo" />
  </Example>
</ComponentLayout>
