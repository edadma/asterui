---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  WithTooltipDemo,
  TypesDemo,
  ShapesDemo,
  WithBadgeDemo,
  GroupDemo,
  BackTopDemo,
} from '../../components/FloatButtonDemo';
import FloatButtonDemoSource from '../../components/FloatButtonDemo.tsx?raw';

const api = [
  { title: 'FloatButton', data: [
    { property: 'icon', description: 'Icon to display in the button', type: 'React.ReactNode' },
    { property: 'description', description: 'Description text below icon', type: 'React.ReactNode' },
    { property: 'type', description: 'Button type/color', type: "'default' | 'primary'", default: "'default'" },
    { property: 'shape', description: 'Button shape', type: "'circle' | 'square'", default: "'circle'" },
    { property: 'tooltip', description: 'Tooltip text on hover', type: 'string' },
    { property: 'tooltipPlacement', description: 'Tooltip position', type: "'left' | 'right' | 'top' | 'bottom'", default: "'left'" },
    { property: 'badge', description: 'Badge content to show', type: 'number | React.ReactNode' },
    { property: 'href', description: 'Link URL (renders as anchor)', type: 'string' },
    { property: 'target', description: 'Link target', type: 'string' },
    { property: 'onClick', description: 'Click event handler', type: '() => void' },
    { property: 'className', description: 'Additional CSS classes', type: 'string' },
  ]},
  { title: 'FloatButton.Group', data: [
    { property: 'children', description: 'FloatButton components to group', type: 'React.ReactNode' },
    { property: 'flower', description: 'Arrange buttons in quarter-circle (radial) layout', type: 'boolean', default: 'false' },
    { property: 'shape', description: 'Button shape for children', type: "'circle' | 'square'", default: "'circle'" },
    { property: 'icon', description: 'Main trigger button icon', type: 'React.ReactNode' },
    { property: 'mainAction', description: 'Main action button icon (replaces trigger when open)', type: 'React.ReactNode' },
    { property: 'onMainAction', description: 'Click handler for main action button', type: '() => void' },
    { property: 'showClose', description: 'Show close button when open', type: 'boolean', default: 'false' },
    { property: 'type', description: 'Button type/color', type: "'default' | 'primary'", default: "'default'" },
    { property: 'position', description: 'Position on screen', type: "'bottom-right' | 'bottom-left' | 'top-right' | 'top-left'", default: "'bottom-right'" },
    { property: 'offset', description: 'Distance from edge in pixels', type: 'number', default: '24' },
  ]},
  { title: 'FloatButton.BackTop', data: [
    { property: 'visibilityHeight', description: 'Scroll distance before button appears (pixels)', type: 'number', default: '400' },
    { property: 'target', description: 'Scroll target element', type: '() => HTMLElement | Window' },
    { property: 'onClick', description: 'Click event handler (called before scrolling)', type: '() => void' },
    { property: 'icon', description: 'Custom icon', type: 'React.ReactNode' },
    { property: 'duration', description: 'Scroll animation duration in ms', type: 'number', default: '450' },
    { property: 'position', description: 'Position on screen', type: "'bottom-right' | 'bottom-left'", default: "'bottom-right'" },
    { property: 'offset', description: 'Distance from edge in pixels', type: 'number', default: '24' },
  ]},
];
---

<ComponentLayout
  name="FloatButton"
  description="Floating action button that stays fixed on the page for quick access to common actions."
  api={api}
>
  <Example title="Basic" description="Simple floating action button." source={FloatButtonDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="With Tooltip" description="Float button with tooltip on hover." source={FloatButtonDemoSource} fn="WithTooltipDemo">
    <WithTooltipDemo client:load slot="demo" />
  </Example>

  <Example title="Types" description="Default and primary button types." source={FloatButtonDemoSource} fn="TypesDemo">
    <TypesDemo client:load slot="demo" />
  </Example>

  <Example title="Shapes" description="Circle and square button shapes." source={FloatButtonDemoSource} fn="ShapesDemo">
    <ShapesDemo client:load slot="demo" />
  </Example>

  <Example title="With Badge" description="Float button with notification badge." source={FloatButtonDemoSource} fn="WithBadgeDemo">
    <WithBadgeDemo client:load slot="demo" />
  </Example>

  <Example title="Float Button Group" description="Group of float buttons that expand on click." source={FloatButtonDemoSource} fn="GroupDemo">
    <GroupDemo client:load slot="demo" />
  </Example>

  <Example title="Back to Top" description="Scroll to top button that appears after scrolling down." source={FloatButtonDemoSource} fn="BackTopDemo">
    <BackTopDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Uses native <code class="bg-base-content/20 px-1 rounded">&lt;button&gt;</code> element for proper keyboard support</li>
      <li>Supports <code class="bg-base-content/20 px-1 rounded">href</code> prop to render as anchor for link functionality</li>
      <li>Tooltips provide context for screen readers when present</li>
      <li>Focus states are clearly visible for keyboard navigation</li>
      <li>Group expansion is keyboard accessible</li>
      <li>BackTop button appears/disappears based on scroll position</li>
    </ul>
  </section>
</ComponentLayout>
