---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  ValidationDemo,
  TooltipExtraDemo,
  FeedbackDemo,
  LayoutsDemo,
  InitialValuesDemo,
  FloatingLabelDemo,
  AddonsDemo,
} from '../../components/FormDemo';
import FormDemoSource from '../../components/FormDemo.tsx?raw';

const api = [
  { title: 'Form', data: [
    { property: 'onFinish', description: 'Success handler (called when validation passes)', type: '(values: any) => void' },
    { property: 'onFinishFailed', description: 'Failed handler (called when validation fails)', type: '(errorInfo: any) => void' },
    { property: 'initialValues', description: 'Initial form field values', type: 'Record<string, any>' },
    { property: 'layout', description: 'Form layout orientation', type: "'horizontal' | 'vertical' | 'inline'", default: "'vertical'" },
    { property: 'labelWidth', description: 'Label width in pixels for horizontal layout', type: 'number', default: '60' },
    { property: 'disabled', description: 'Disable all form fields', type: 'boolean', default: 'false' },
    { property: 'children', description: 'Form content (Form.Item elements)', type: 'React.ReactNode' },
    { property: 'className', description: 'Additional CSS classes', type: 'string' },
  ]},
  { title: 'Form.Item', data: [
    { property: 'name', description: 'Field name (required for validation)', type: 'string' },
    { property: 'label', description: 'Field label text', type: 'string' },
    { property: 'floatingLabel', description: 'Floating label text (alternative to label)', type: 'string' },
    { property: 'addonBefore', description: 'Text/element before input (outside)', type: 'React.ReactNode' },
    { property: 'addonAfter', description: 'Text/element after input (outside)', type: 'React.ReactNode' },
    { property: 'rules', description: 'Validation rules', type: 'ValidationRule[]' },
    { property: 'required', description: 'Mark field as required (shorthand)', type: 'boolean', default: 'false' },
    { property: 'valuePropName', description: 'Prop name for value (e.g., "checked" for checkboxes)', type: 'string', default: "'value'" },
    { property: 'inline', description: 'Render with auto width instead of full width', type: 'boolean', default: 'false' },
    { property: 'tooltip', description: 'Tooltip text to show next to label', type: 'string' },
    { property: 'extra', description: 'Additional content below the form control', type: 'React.ReactNode' },
    { property: 'hasFeedback', description: 'Show validation feedback icon', type: 'boolean', default: 'false' },
    { property: 'dependencies', description: 'Field names that trigger re-validation when changed', type: 'string[]' },
    { property: 'validateTrigger', description: 'When to validate', type: "'onChange' | 'onBlur' | 'onSubmit' | array", default: "'onChange'" },
    { property: 'initialValue', description: 'Initial value for this field', type: 'any' },
    { property: 'hidden', description: 'Hide field but still validate and submit', type: 'boolean', default: 'false' },
    { property: 'children', description: 'Form control element (Input, Select, etc.)', type: 'React.ReactNode' },
    { property: 'className', description: 'Additional CSS classes', type: 'string' },
  ]},
  { title: 'Form.ErrorList', data: [
    { property: 'fields', description: 'Specific field names to show errors for (shows all if not specified)', type: 'string[]' },
    { property: 'className', description: 'Additional CSS classes', type: 'string' },
  ]},
];
---

<ComponentLayout
  name="Form"
  description="Form wrapper with validation, layout options, and field management."
  api={api}
>
  <Example title="Basic Form" description="Simple login form with username and password fields." source={FormDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Form Validation" description="Form with validation rules for required fields and email pattern." source={FormDemoSource} fn="ValidationDemo">
    <ValidationDemo client:load slot="demo" />
  </Example>

  <Example title="Tooltip & Extra" description="Labels with tooltip help icons and extra helper text below fields." source={FormDemoSource} fn="TooltipExtraDemo">
    <TooltipExtraDemo client:load slot="demo" />
  </Example>

  <Example title="Validation Feedback" description="Show validation icons inside inputs with hasFeedback prop." source={FormDemoSource} fn="FeedbackDemo">
    <FeedbackDemo client:load slot="demo" />
  </Example>

  <Example title="Form Layouts" description="Different form layouts: horizontal, vertical, and inline." source={FormDemoSource} fn="LayoutsDemo">
    <LayoutsDemo client:load slot="demo" />
  </Example>

  <Example title="Initial Values" description="Form with pre-populated initial values." source={FormDemoSource} fn="InitialValuesDemo">
    <InitialValuesDemo client:load slot="demo" />
  </Example>

  <Example title="Floating Labels" description="Form.Item with floating labels that animate when focused." source={FormDemoSource} fn="FloatingLabelDemo">
    <FloatingLabelDemo client:load slot="demo" />
  </Example>

  <Example title="Form Addons" description="Form.Item with text/elements before or after inputs." source={FormDemoSource} fn="AddonsDemo">
    <AddonsDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Validation Rules</h2>
    <p class="text-base-content/80 mb-4">
      The <code class="bg-base-content/20 px-1 rounded">rules</code> prop accepts an array of validation rules:
    </p>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li><code class="bg-base-content/20 px-1 rounded">required: boolean</code> - Field is required</li>
      <li><code class="bg-base-content/20 px-1 rounded">message: string</code> - Error message to display</li>
      <li><code class="bg-base-content/20 px-1 rounded">type: 'email' | 'url' | 'number'</code> - Built-in type validation</li>
      <li><code class="bg-base-content/20 px-1 rounded">min: number</code> - Minimum length for strings or minimum value for numbers</li>
      <li><code class="bg-base-content/20 px-1 rounded">max: number</code> - Maximum length for strings or maximum value for numbers</li>
      <li><code class="bg-base-content/20 px-1 rounded">pattern: RegExp</code> - Custom regex pattern validation</li>
      <li><code class="bg-base-content/20 px-1 rounded">validate: (value) =&gt; boolean | string | Promise</code> - Custom validation function</li>
    </ul>
  </section>
</ComponentLayout>
