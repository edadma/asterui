---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  GutterDemo,
  OffsetDemo,
  ResponsiveDemo,
  Cols120Demo,
} from '../../components/GridDemo';
import GridDemoSource from '../../components/GridDemo.tsx?raw';

const api = [
  { title: 'Row', data: [
    { property: 'cols', description: 'Number of grid columns', type: '24 | 120', default: '24' },
    { property: 'gutter', description: 'Spacing between columns (px)', type: 'number | [number, number]', default: '16' },
    { property: 'justify', description: 'Horizontal alignment of grid items', type: "'start' | 'end' | 'center' | 'between' | 'around' | 'evenly'" },
    { property: 'align', description: 'Vertical alignment of grid items', type: "'start' | 'end' | 'center' | 'stretch' | 'baseline'" },
    { property: 'children', description: 'Column components', type: 'React.ReactNode' },
    { property: 'className', description: 'Additional CSS classes', type: 'string' },
  ]},
  { title: 'Col', data: [
    { property: 'span', description: 'Number of columns to span (out of 24 or 120)', type: 'number', default: '24' },
    { property: 'offset', description: 'Number of columns to offset', type: 'number', default: '0' },
    { property: 'order', description: 'Visual order of the column (1-12)', type: 'number' },
    { property: 'xs', description: 'Responsive span for extra small screens (<640px)', type: 'number' },
    { property: 'sm', description: 'Responsive span for small screens (≥640px)', type: 'number' },
    { property: 'md', description: 'Responsive span for medium screens (≥768px)', type: 'number' },
    { property: 'lg', description: 'Responsive span for large screens (≥1024px)', type: 'number' },
    { property: 'xl', description: 'Responsive span for extra large screens (≥1280px)', type: 'number' },
    { property: 'xxl', description: 'Responsive span for 2x extra large screens (≥1536px)', type: 'number' },
    { property: 'children', description: 'Column content', type: 'React.ReactNode' },
    { property: 'className', description: 'Additional CSS classes', type: 'string' },
  ]},
];
---

<ComponentLayout
  name="Grid"
  importCode="import { Row, Col } from 'asterui'"
  description="Flexible grid system with Row and Col components. Supports 24-column (default) and 120-column modes for precise layouts."
  api={api}
>
  <Example title="Basic Grid" description="Basic 24-column grid system." source={GridDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Grid Gutter" description="Customize spacing between columns. Default is 16px; recommended values are 16, 24, 32, 40, 48." source={GridDemoSource} fn="GutterDemo">
    <GutterDemo client:load slot="demo" />
  </Example>

  <Example title="Column Offset" description="Offset columns using the offset prop." source={GridDemoSource} fn="OffsetDemo">
    <OffsetDemo client:load slot="demo" />
  </Example>

  <Example title="Responsive Columns" description="Different column spans at different breakpoints." source={GridDemoSource} fn="ResponsiveDemo">
    <ResponsiveDemo client:load slot="demo" />
  </Example>

  <Example title="120-Column Grid" description="Fine-grained control with 120 columns for precise layouts." source={GridDemoSource} fn="Cols120Demo">
    <Cols120Demo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Usage Notes</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Default is a 24-column layout; use <code class="bg-base-content/20 px-1 rounded">cols={120}</code> for finer control</li>
      <li>Use <code class="bg-base-content/20 px-1 rounded">Row</code> as the container and <code class="bg-base-content/20 px-1 rounded">Col</code> for columns</li>
      <li>Set <code class="bg-base-content/20 px-1 rounded">gutter</code> on Row to add spacing between columns</li>
      <li>Use responsive props (xs, sm, md, lg, xl, xxl) for different column spans at different screen sizes</li>
      <li>Column spans must add up to the total columns (24 or 120) or less per row</li>
      <li>Use <code class="bg-base-content/20 px-1 rounded">offset</code> to create empty space before a column</li>
      <li>120-column mode is useful for layouts that need ratios like 1:3, 2:3, or percentages like 25%, 37.5%</li>
    </ul>
  </section>
</ComponentLayout>
