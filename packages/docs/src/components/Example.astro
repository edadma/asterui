---
import { Code } from 'astro:components'

interface Props {
  title: string
  description?: string
  source?: string
  fn?: string
}

const { title, description, source, fn } = Astro.props

/*
 * Extract example code using directive comments:
 *
 * // @example-imports: { Component } from 'asterui'
 * // @example-imports: { useState } from 'react'
 *
 * export function MyDemo() {
 *   // @example-include
 *   const items = [...]
 *   // @example-include-end
 *
 *   return (
 *     <Demo>
 *       {/- @example-return -/}
 *       <Component items={items} />
 *       {/- @example-return-end -/}
 *     </Demo>
 *   )
 * }
 *
 * For fragments: {/- @example-return fragment -/}
 */

function dedent(code: string): string {
  const lines = code.split('\n')
  const nonEmptyLines = lines.filter(l => l.trim())
  if (nonEmptyLines.length === 0) return code
  const minIndent = nonEmptyLines.reduce((min, l) => {
    const indent = l.match(/^\s*/)?.[0].length ?? 0
    return Math.min(min, indent)
  }, Infinity)
  return lines.map(l => l.slice(minIndent)).join('\n').trim()
}

let extractedCode = ''
if (source && fn) {
  // Find the function in source
  const fnRegex = new RegExp(`((?:\\/\\/ @example-imports:[^\\n]*\\n)*)export function ${fn}\\s*\\([^)]*\\)\\s*\\{([\\s\\S]*?)\\n\\}(?=\\s*(?:export|$))`, 'm')
  const fnMatch = source.match(fnRegex)

  if (fnMatch) {
    const importsBlock = fnMatch[1] || ''
    const fnBody = fnMatch[2]

    // Extract @example-imports directives
    const imports = importsBlock
      .split('\n')
      .filter(line => line.startsWith('// @example-imports:'))
      .map(line => `import ${line.replace('// @example-imports:', '').trim()}`)
      .join('\n')

    // Extract @example-include blocks
    const includeRegex = /\/\/ @example-include\n([\s\S]*?)\/\/ @example-include-end/g
    const includeBlocks: string[] = []
    let includeMatch
    while ((includeMatch = includeRegex.exec(fnBody)) !== null) {
      includeBlocks.push(dedent(includeMatch[1]))
    }
    const includeCode = includeBlocks.join('\n\n')

    // Extract @example-return block
    // Supports both: {/* @example-return */} and {/* @example-return fragment */}
    const returnRegex = /\{\/\* @example-return(\s+fragment)? \*\/\}([\s\S]*?)\{\/\* @example-return-end \*\/\}/
    const returnMatch = fnBody.match(returnRegex)

    if (returnMatch) {
      const needsFragment = !!returnMatch[1]
      const returnJsx = dedent(returnMatch[2])

      // Build the example code
      let body = ''
      if (includeCode) {
        body += includeCode + '\n\n'
      }

      const indentedJsx = returnJsx.split('\n').map(l => l ? '    ' + l : l).join('\n')

      if (needsFragment) {
        body += `return (\n    <>\n${indentedJsx.split('\n').map(l => l ? '  ' + l : l).join('\n')}\n    </>\n  )`
      } else {
        body += `return (\n${indentedJsx}\n  )`
      }

      extractedCode = `${imports}${imports ? '\n\n' : ''}function App() {
  ${body.split('\n').join('\n  ')}
}

export default App`
    }
  }
}
---

<div class="example-card">
  <div class="example-header">
    <div class="example-title">
      <h3>{title}</h3>
      {description && <p>{description}</p>}
    </div>
    <button class="toggle-code" aria-label="Toggle code">
      &lt;/&gt;
    </button>
  </div>
  <div class="demo-wrapper">
    <slot name="demo" />
  </div>
  <div class="example-code">
    {extractedCode && (
      <button class="copy-btn" aria-label="Copy code" data-code={extractedCode}>
        <span class="copy-icon">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
            <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
          </svg>
        </span>
        <span class="check-icon">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="20 6 9 17 4 12"></polyline>
          </svg>
        </span>
      </button>
    )}
    {extractedCode ? (
      <Code code={extractedCode} lang="tsx" themes={{ light: 'github-light', dark: 'github-dark' }} defaultColor={false} />
    ) : (
      <slot name="code" />
    )}
  </div>
</div>

<style>
  .example-card {
    break-inside: avoid;
    margin-bottom: 1.5rem;
    border-radius: 0.5rem;
    border: 1px solid #4b5563;
  }

  :global([data-theme="light"]) .example-card {
    border-color: #d1d5db;
  }

  .demo-wrapper {
    padding: 0;
    min-height: 2rem;
    border-radius: 0 0 0.5rem 0.5rem;
  }

  .example-card.open .demo-wrapper {
    border-radius: 0;
  }

  .demo-wrapper > :global(astro-island) {
    display: block;
  }

  .example-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 0.75rem;
    border-bottom: 1px solid #4b5563;
    background: #374151;
    border-radius: 0.5rem 0.5rem 0 0;
  }

  :global([data-theme="light"]) .example-header {
    border-bottom-color: #d1d5db;
    background: #f3f4f6;
  }

  .example-title {
    display: flex;
    flex-direction: column;
    gap: 0.125rem;
  }

  .example-header h3 {
    margin: 0;
    font-size: 0.875rem;
    font-weight: 600;
    color: #f3f4f6;
  }

  :global([data-theme="light"]) .example-header h3 {
    color: #1f2937;
  }

  .example-title p {
    margin: 0;
    font-size: 0.875rem;
    color: #9ca3af;
  }

  :global([data-theme="light"]) .example-title p {
    color: #6b7280;
  }

  .toggle-code {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.25rem 0.5rem;
    font-family: monospace;
    font-size: 0.875rem;
    color: #9ca3af;
    border-radius: 0.25rem;
  }

  .toggle-code:hover {
    background: #4b5563;
    color: #f3f4f6;
  }

  :global([data-theme="light"]) .toggle-code:hover {
    background: #e5e7eb;
    color: #1f2937;
  }

  .example-code {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease-out;
    position: relative;
  }

  .example-card.open .example-code {
    max-height: 1000px;
    border-top: 1px solid #4b5563;
    border-radius: 0 0 0.5rem 0.5rem;
    overflow: hidden;
  }

  :global([data-theme="light"]) .example-card.open .example-code {
    border-top-color: #d1d5db;
  }

  .example-code :global(pre) {
    margin: 0;
    border-radius: 0;
    padding: 0.75rem;
  }

  .copy-btn {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #4b5563;
    border: none;
    cursor: pointer;
    border-radius: 0.25rem;
    color: #9ca3af;
    z-index: 10;
  }

  .copy-btn:hover {
    background: #6b7280;
    color: #f3f4f6;
  }

  :global([data-theme="light"]) .copy-btn {
    background: #e5e7eb;
    color: #6b7280;
  }

  :global([data-theme="light"]) .copy-btn:hover {
    background: #d1d5db;
    color: #1f2937;
  }

  .copy-btn .check-icon {
    display: none;
  }

  .copy-btn.copied .copy-icon {
    display: none;
  }

  .copy-btn.copied .check-icon {
    display: flex;
    color: #22c55e;
  }

  .example-code :global(pre) {
    margin: 0 !important;
    border-radius: 0 !important;
  }
</style>

<script>
  document.querySelectorAll('.toggle-code').forEach(btn => {
    btn.addEventListener('click', () => {
      const card = btn.closest('.example-card')
      card?.classList.toggle('open')
    })
  })

  document.querySelectorAll('.copy-btn').forEach(btn => {
    btn.addEventListener('click', async () => {
      const code = btn.getAttribute('data-code')
      if (!code) return

      try {
        await navigator.clipboard.writeText(code)
        btn.classList.add('copied')
        setTimeout(() => btn.classList.remove('copied'), 2000)
      } catch (err) {
        console.error('Failed to copy:', err)
      }
    })
  })
</script>
