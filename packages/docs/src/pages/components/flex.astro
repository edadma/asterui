---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  DirectionDemo,
  JustifyDemo,
  AlignDemo,
  GapDemo,
  WrapDemo,
  CenteringDemo,
  NestedDemo,
} from '../../components/FlexDemo';
import FlexDemoSource from '../../components/FlexDemo.tsx?raw';

const api = [
  { property: 'direction', description: 'Flex direction', type: "'row' | 'column' | 'row-reverse' | 'column-reverse'", default: "'row'" },
  { property: 'justify', description: 'Justify content along main axis', type: "'start' | 'end' | 'center' | 'between' | 'around' | 'evenly'" },
  { property: 'align', description: 'Align items along cross axis', type: "'start' | 'end' | 'center' | 'baseline' | 'stretch'" },
  { property: 'wrap', description: 'Whether to wrap items', type: "boolean | 'wrap' | 'nowrap' | 'wrap-reverse'", default: 'false' },
  { property: 'gap', description: 'Gap between items', type: "'xs' | 'sm' | 'md' | 'lg' | 'xl' | number" },
  { property: 'flex', description: 'Flex shorthand for the container', type: "'1' | 'auto' | 'initial' | 'none'" },
  { property: 'inline', description: 'Use inline-flex instead of flex', type: 'boolean', default: 'false' },
  { property: 'minHeight', description: 'Minimum height', type: "'screen' | 'full' | 'fit' | 'min' | 'max'" },
  { property: 'minWidth', description: 'Minimum width', type: "'full' | 'fit' | 'min' | 'max'" },
  { property: 'className', description: 'Additional CSS classes', type: 'string' },
];
---

<ComponentLayout
  name="Flex"
  description="Flexible box layout component for building responsive layouts."
  api={api}
>
  <Example title="Basic" description="Default horizontal flex layout." source={FlexDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Direction" description="Control flex direction with the direction prop." source={FlexDemoSource} fn="DirectionDemo">
    <DirectionDemo client:load slot="demo" />
  </Example>

  <Example title="Justify Content" description="Distribute items along the main axis." source={FlexDemoSource} fn="JustifyDemo">
    <JustifyDemo client:load slot="demo" />
  </Example>

  <Example title="Align Items" description="Align items along the cross axis." source={FlexDemoSource} fn="AlignDemo">
    <AlignDemo client:load slot="demo" />
  </Example>

  <Example title="Gap Sizes" description="Control spacing between items." source={FlexDemoSource} fn="GapDemo">
    <GapDemo client:load slot="demo" />
  </Example>

  <Example title="Wrap" description="Allow items to wrap to the next line." source={FlexDemoSource} fn="WrapDemo">
    <WrapDemo client:load slot="demo" />
  </Example>

  <Example title="Centering Content" description="Center content both horizontally and vertically." source={FlexDemoSource} fn="CenteringDemo">
    <CenteringDemo client:load slot="demo" />
  </Example>

  <Example title="Nested Flex" description="Combine flex containers for complex layouts." source={FlexDemoSource} fn="NestedDemo">
    <NestedDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Usage Notes</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Flex is a layout utility with no specific accessibility requirements</li>
      <li>Maintains semantic structure of child elements</li>
      <li>Gap maps to Tailwind spacing: xs=1, sm=2, md=4, lg=6, xl=8</li>
    </ul>
  </section>
</ComponentLayout>
