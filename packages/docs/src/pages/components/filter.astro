---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  SizesDemo,
  ObjectOptionsDemo,
  NoResetDemo,
} from '../../components/FilterDemo';
import FilterDemoSource from '../../components/FilterDemo.tsx?raw';

const api = [
  { title: 'Filter', data: [
    { property: 'options', description: 'Filter options', type: '(string | FilterOption)[]' },
    { property: 'value', description: 'Controlled selected value', type: 'string' },
    { property: 'defaultValue', description: 'Default value for uncontrolled mode', type: 'string' },
    { property: 'onChange', description: 'Called when selection changes', type: '(value: string | undefined) => void' },
    { property: 'name', description: 'Radio group name (auto-generated if not provided)', type: 'string' },
    { property: 'size', description: 'Button size', type: "'xs' | 'sm' | 'md' | 'lg'", default: "'md'" },
    { property: 'showReset', description: 'Show reset button', type: 'boolean', default: 'true' },
    { property: 'resetLabel', description: 'Reset button label', type: 'React.ReactNode', default: "'Ã—'" },
    { property: 'className', description: 'Additional CSS classes', type: 'string' },
  ]},
  { title: 'FilterOption', data: [
    { property: 'label', description: 'Display text for the option', type: 'string' },
    { property: 'value', description: 'Value of the option', type: 'string' },
    { property: 'disabled', description: 'Whether the option is disabled', type: 'boolean', default: 'false' },
  ]},
];
---

<ComponentLayout
  name="Filter"
  description="A group of radio buttons for single-option filtering. Selecting an option hides the others and shows a reset button."
  api={api}
>
  <Example title="Basic" description="Simple filter with string options. Click an option to select, click reset to clear." source={FilterDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Sizes" description="Available size variants." source={FilterDemoSource} fn="SizesDemo">
    <SizesDemo client:load slot="demo" />
  </Example>

  <Example title="Object Options" description="Use objects for options with custom labels, values, and disabled state." source={FilterDemoSource} fn="ObjectOptionsDemo">
    <ObjectOptionsDemo client:load slot="demo" />
  </Example>

  <Example title="Without Reset Button" description="Hide the reset button when you want to require a selection." source={FilterDemoSource} fn="NoResetDemo">
    <NoResetDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Uses native radio inputs for keyboard and screen reader support</li>
      <li>Options use <code class="bg-base-content/20 px-1 rounded">aria-label</code> for accessible names</li>
      <li>Reset button has <code class="bg-base-content/20 px-1 rounded">aria-label="Reset filter"</code></li>
      <li>Supports keyboard navigation with Tab and Space/Enter</li>
    </ul>
  </section>
</ComponentLayout>
