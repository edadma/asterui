---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  ProductCardDemo,
  TwoImagesDemo,
} from '../../components/HoverGalleryDemo';
import HoverGalleryDemoSource from '../../components/HoverGalleryDemo.tsx?raw';

const api = [
  { property: 'images', description: 'Array of image URLs (2-10 images)', type: 'string[]' },
  { property: 'alts', description: 'Alt text for each image', type: 'string[]' },
  { property: 'className', description: 'Additional CSS classes', type: 'string' },
];
---

<ComponentLayout
  name="HoverGallery"
  description="Reveal multiple images by hovering horizontally. Ideal for product galleries."
  api={api}
>
  <Example title="Basic Gallery" description="Hover horizontally to reveal different images." source={HoverGalleryDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Product Card" description="Perfect for e-commerce product displays." source={HoverGalleryDemoSource} fn="ProductCardDemo">
    <ProductCardDemo client:load slot="demo" />
  </Example>

  <Example title="Two Images" description="Simple before/after or front/back comparison." source={HoverGalleryDemoSource} fn="TwoImagesDemo">
    <TwoImagesDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Notes</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Supports up to 10 images</li>
      <li>First image is visible by default</li>
      <li>Pure CSS - no JavaScript required for the hover effect</li>
      <li>Works best with images of the same aspect ratio</li>
    </ul>
  </section>
</ComponentLayout>
