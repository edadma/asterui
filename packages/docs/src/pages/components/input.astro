---
import ComponentLayout from '../../layouts/ComponentLayout.astro';
import Example from '../../components/Example.astro';
import {
  BasicDemo,
  SizesDemo,
  ColorsDemo,
  TypesDemo,
  VariantsDemo,
  MaskDemo,
  ControlledDemo,
  DisabledDemo,
  AllowClearDemo,
  PrefixSuffixDemo,
  StatusDemo,
  FloatingLabelDemo,
  AddonsDemo,
} from '../../components/InputDemo';
import InputDemoSource from '../../components/InputDemo.tsx?raw';

const api = [
  { property: 'type', description: 'HTML input type', type: "'text' | 'password' | 'email' | 'number' | 'date' | 'datetime-local' | 'week' | 'month' | 'tel' | 'url' | 'search' | 'time'", default: "'text'" },
  { property: 'size', description: 'Input size', type: "'xs' | 'sm' | 'md' | 'lg' | 'xl'" },
  { property: 'color', description: 'Input color variant', type: "'neutral' | 'primary' | 'secondary' | 'accent' | 'info' | 'success' | 'warning' | 'error'" },
  { property: 'status', description: 'Validation status (sets aria-invalid)', type: "'error' | 'warning'" },
  { property: 'ghost', description: 'Ghost variant (transparent)', type: 'boolean', default: 'false' },
  { property: 'bordered', description: 'Show border (set to false to remove)', type: 'boolean', default: 'true' },
  { property: 'allowClear', description: 'Show clear button when input has value', type: 'boolean | { clearIcon?: ReactNode }', default: 'false' },
  { property: 'onClear', description: 'Callback when clear button is clicked', type: '() => void' },
  { property: 'prefix', description: 'Prefix icon or element (inside input)', type: 'React.ReactNode' },
  { property: 'suffix', description: 'Suffix icon or element (inside input)', type: 'React.ReactNode' },
  { property: 'addonBefore', description: 'Text/element before input (outside, using DaisyUI label)', type: 'React.ReactNode' },
  { property: 'addonAfter', description: 'Text/element after input (outside, using DaisyUI label)', type: 'React.ReactNode' },
  { property: 'floatingLabel', description: 'Floating label text (uses DaisyUI floating-label)', type: 'string' },
  { property: 'mask', description: 'Input mask pattern. Use # for digits, A for letters, * for alphanumeric', type: 'string' },
  { property: 'maskPlaceholder', description: 'Placeholder character shown in mask', type: 'string', default: "'_'" },
  { property: 'errorId', description: 'ID of error message element (for aria-describedby)', type: 'string' },
  { property: 'disabled', description: 'Disabled state', type: 'boolean', default: 'false' },
  { property: 'placeholder', description: 'Placeholder text', type: 'string' },
  { property: 'value', description: 'Input value', type: 'string' },
  { property: 'onChange', description: 'Change event handler', type: '(e: React.ChangeEvent<HTMLInputElement>) => void' },
  { property: 'className', description: 'Additional CSS classes', type: 'string' },
];
---

<ComponentLayout
  name="Input"
  description="Text input field for user data entry with validation states and customization options."
  api={api}
>
  <Example title="Basic Input" description="Simple text input field." source={InputDemoSource} fn="BasicDemo">
    <BasicDemo client:load slot="demo" />
  </Example>

  <Example title="Sizes" description="Five sizes: xs, sm, md (default), lg, and xl." source={InputDemoSource} fn="SizesDemo">
    <SizesDemo client:load slot="demo" />
  </Example>

  <Example title="Colors" description="Different color variants for visual emphasis." source={InputDemoSource} fn="ColorsDemo">
    <ColorsDemo client:load slot="demo" />
  </Example>

  <Example title="Input Types" description="Different HTML input types." source={InputDemoSource} fn="TypesDemo">
    <TypesDemo client:load slot="demo" />
  </Example>

  <Example title="Variants" description="Bordered and ghost styles." source={InputDemoSource} fn="VariantsDemo">
    <VariantsDemo client:load slot="demo" />
  </Example>

  <Example title="Input Mask" description="Formatted input with masking pattern." source={InputDemoSource} fn="MaskDemo">
    <MaskDemo client:load slot="demo" />
  </Example>

  <Example title="Controlled Input" description="Input with controlled state." source={InputDemoSource} fn="ControlledDemo">
    <ControlledDemo client:load slot="demo" />
  </Example>

  <Example title="Disabled" description="Disabled input state." source={InputDemoSource} fn="DisabledDemo">
    <DisabledDemo client:load slot="demo" />
  </Example>

  <Example title="Allow Clear" description="Input with clear button." source={InputDemoSource} fn="AllowClearDemo">
    <AllowClearDemo client:load slot="demo" />
  </Example>

  <Example title="Prefix & Suffix" description="Input with prefix and suffix icons." source={InputDemoSource} fn="PrefixSuffixDemo">
    <PrefixSuffixDemo client:load slot="demo" />
  </Example>

  <Example title="Validation Status" description="Input with validation status for form feedback." source={InputDemoSource} fn="StatusDemo">
    <StatusDemo client:load slot="demo" />
  </Example>

  <Example title="Floating Label" description="Input with animated floating label that moves above when focused or filled." source={InputDemoSource} fn="FloatingLabelDemo">
    <FloatingLabelDemo client:load slot="demo" />
  </Example>

  <Example title="Addons" description="Input with text or elements before/after (outside the input field)." source={InputDemoSource} fn="AddonsDemo">
    <AddonsDemo client:load slot="demo" />
  </Example>

  <section slot="accessibility" class="mb-8">
    <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
    <ul class="list-disc list-inside space-y-2 text-base-content/80">
      <li>Uses native <code class="bg-base-content/20 px-1 rounded">&lt;input&gt;</code> element for proper keyboard support</li>
      <li>Disabled state is properly communicated to assistive technologies</li>
      <li>Clear button has <code class="bg-base-content/20 px-1 rounded">aria-label</code> for screen readers</li>
      <li>Use <code class="bg-base-content/20 px-1 rounded">status="error"</code> to set <code class="bg-base-content/20 px-1 rounded">aria-invalid</code> automatically</li>
      <li>Use <code class="bg-base-content/20 px-1 rounded">errorId</code> to link input to error message via <code class="bg-base-content/20 px-1 rounded">aria-describedby</code></li>
      <li>Focus states are clearly visible for keyboard navigation</li>
    </ul>
  </section>
</ComponentLayout>
