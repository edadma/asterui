---
import Layout from '../../layouts/Layout.astro';
import ApiTable from '../../components/ApiTable.astro';
import { Code } from 'astro:components';

const commandApi = [
  { property: 'open', description: 'Controlled open state', type: 'boolean', default: '-' },
  { property: 'onOpenChange', description: 'Callback when open state changes', type: '(open: boolean) => void', default: '-' },
  { property: 'defaultOpen', description: 'Default open state (uncontrolled)', type: 'boolean', default: 'false' },
  { property: 'items', description: 'Data-driven item configuration', type: 'CommandItemConfig[]', default: '-' },
  { property: 'filter', description: 'Custom filter function', type: '(value: string, search: string, keywords?: string[]) => boolean', default: '-' },
  { property: 'loop', description: 'Loop keyboard navigation at edges', type: 'boolean', default: 'true' },
  { property: 'shortcut', description: 'Global keyboard shortcut key(s)', type: 'string[]', default: "['k']" },
  { property: 'placeholder', description: 'Search input placeholder', type: 'string', default: "'Type a command or search...'" },
  { property: 'emptyMessage', description: 'Message when no results found', type: 'ReactNode', default: "'No results found.'" },
];

const itemConfigApi = [
  { property: 'key', description: 'Unique key for the item', type: 'string', default: '-' },
  { property: 'label', description: 'Display label', type: 'ReactNode', default: '-' },
  { property: 'group', description: 'Group name for categorization', type: 'string', default: '-' },
  { property: 'keywords', description: 'Additional search keywords', type: 'string[]', default: '-' },
  { property: 'disabled', description: 'Disable the item', type: 'boolean', default: 'false' },
  { property: 'onSelect', description: 'Callback when item is selected', type: '() => void', default: '-' },
  { property: 'icon', description: 'Icon element to display', type: 'ReactNode', default: '-' },
];

const examples = [
  {
    id: 'basic',
    title: 'Basic Usage',
    description: 'Data-driven command palette with grouped items.',
    code: `import { useState } from 'react'
import { Command, Button } from 'asterui'

export default function App() {
  const [open, setOpen] = useState(false)

  const items = [
    { key: 'new-file', label: 'Create New File', group: 'Actions' },
    { key: 'new-folder', label: 'Create New Folder', group: 'Actions' },
    { key: 'search', label: 'Search Files', group: 'Actions' },
    { key: 'home', label: 'Go to Home', group: 'Navigation' },
    { key: 'settings', label: 'Open Settings', group: 'Navigation' },
  ]

  return (
    <>
      <Button color="primary" onClick={() => setOpen(true)}>
        Open Command Palette
      </Button>
      <Command
        open={open}
        onOpenChange={setOpen}
        items={items}
        placeholder="Type a command or search..."
      />
    </>
  )
}`,
  },
  {
    id: 'with-icons',
    title: 'With Icons',
    description: 'Add icons to command items for visual context.',
    code: `import { useState } from 'react'
import { Command, Button } from 'asterui'

const FileIcon = () => (
  <svg className="w-full h-full" fill="none" viewBox="0 0 24 24" stroke="currentColor">
    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
  </svg>
)

export default function App() {
  const [open, setOpen] = useState(false)

  const items = [
    { key: 'new-file', label: 'Create New File', group: 'Actions', icon: <FileIcon /> },
    { key: 'settings', label: 'Open Settings', group: 'Navigation', icon: <SettingsIcon /> },
  ]

  return (
    <>
      <Button color="primary" onClick={() => setOpen(true)}>
        Open Command Palette
      </Button>
      <Command open={open} onOpenChange={setOpen} items={items} />
    </>
  )
}`,
  },
  {
    id: 'keywords',
    title: 'Search Keywords',
    description: 'Add extra keywords to make items findable by alternative terms.',
    code: `import { useState } from 'react'
import { Command, Button } from 'asterui'

export default function App() {
  const [open, setOpen] = useState(false)

  const items = [
    { key: 'settings', label: 'Open Settings', keywords: ['preferences', 'config', 'options'] },
    { key: 'profile', label: 'View Profile', keywords: ['user', 'account', 'me'] },
  ]

  return (
    <>
      <Button color="primary" onClick={() => setOpen(true)}>
        Open (try "preferences")
      </Button>
      <Command
        open={open}
        onOpenChange={setOpen}
        items={items}
        placeholder="Try 'preferences' or 'config'..."
      />
    </>
  )
}`,
  },
  {
    id: 'compound',
    title: 'Compound Components',
    description: 'Build command palettes using compound components for more control.',
    code: `import { useState } from 'react'
import { Command, Button } from 'asterui'

export default function App() {
  const [open, setOpen] = useState(false)

  return (
    <>
      <Button color="primary" onClick={() => setOpen(true)}>
        Open Command Palette
      </Button>
      <Command open={open} onOpenChange={setOpen}>
        <Command.List>
          <Command.Empty>No results found</Command.Empty>
          <Command.Group heading="Actions">
            <Command.Item onSelect={() => alert('Creating file...')}>
              Create New File
            </Command.Item>
            <Command.Item onSelect={() => alert('Creating folder...')}>
              Create New Folder
            </Command.Item>
          </Command.Group>
          <Command.Separator />
          <Command.Group heading="Navigation">
            <Command.Item onSelect={() => alert('Going home...')}>
              Go to Home
            </Command.Item>
          </Command.Group>
        </Command.List>
      </Command>
    </>
  )
}`,
  },
  {
    id: 'disabled',
    title: 'Disabled Items',
    description: 'Disable specific items to prevent selection.',
    code: `import { useState } from 'react'
import { Command, Button } from 'asterui'

export default function App() {
  const [open, setOpen] = useState(false)

  const items = [
    { key: 'new-file', label: 'Create New File', group: 'Actions' },
    { key: 'new-folder', label: 'Create New Folder', group: 'Actions', disabled: true },
    { key: 'delete', label: 'Delete Files', group: 'Danger', disabled: true },
  ]

  return (
    <>
      <Button color="primary" onClick={() => setOpen(true)}>
        Open Command Palette
      </Button>
      <Command open={open} onOpenChange={setOpen} items={items} />
    </>
  )
}`,
  },
  {
    id: 'custom-shortcut',
    title: 'Custom Shortcut',
    description: 'Change the global keyboard shortcut from ⌘K to another key.',
    code: `import { useState } from 'react'
import { Command, Button, Space } from 'asterui'

export default function App() {
  const [open1, setOpen1] = useState(false)
  const [open2, setOpen2] = useState(false)

  const items = [{ key: 'action1', label: 'Action 1' }]

  return (
    <>
      <Space direction="horizontal" size="sm">
        <Button onClick={() => setOpen1(true)}>Default (⌘K)</Button>
        <Button onClick={() => setOpen2(true)}>Custom (⌘J)</Button>
      </Space>
      <Command open={open1} onOpenChange={setOpen1} items={items} />
      <Command open={open2} onOpenChange={setOpen2} items={items} shortcut={['j']} />
    </>
  )
}`,
  },
];
---

<Layout title="Command - AsterUI">
  <div class="max-w-screen-xl mx-auto">
    <!-- Header -->
    <div class="mb-8">
      <nav class="text-sm breadcrumbs mb-4">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/components">Components</a></li>
          <li>Command</li>
        </ul>
      </nav>
      <h1 class="text-4xl font-bold mb-2">Command</h1>
      <p class="text-base-content/70 text-lg">
        A command palette (⌘K) for quick search and actions. Supports keyboard navigation, grouped items, and both data-driven and compound component patterns.
      </p>
    </div>

    <!-- Import -->
    <section class="mb-8">
      <h2 class="text-2xl font-bold mb-4">Import</h2>
      <div class="border border-base-300 rounded-lg overflow-hidden [&_pre]:!m-0 [&_pre]:!rounded-none">
        <Code code="import { Command } from 'asterui'" lang="tsx" themes={{ light: 'github-light', dark: 'github-dark' }} defaultColor={false} />
      </div>
    </section>

    <!-- Examples -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6">Examples</h2>

      <div class="columns-1 lg:columns-2 gap-6">
      {examples.map((example) => (
        <div class="example-card mb-6 border border-base-300 rounded-lg break-inside-avoid">
          <div class="p-4 bg-base-100 rounded-t-lg">
            <h3 class="text-lg font-semibold mb-1">{example.title}</h3>
            <p class="text-sm text-base-content/70 mb-4">{example.description}</p>
            <div class="demo-container" data-example={example.id}></div>
          </div>
          <div class="border-t border-base-300 flex justify-center bg-base-200 rounded-b-lg">
            <div class="tooltip tooltip-top" data-tip="Show code">
              <button class="toggle-code btn btn-ghost btn-sm font-mono">
                &lt;&#8201;&gt;
              </button>
            </div>
          </div>
          <div class="code-panel relative" aria-hidden="true">
              <button class="copy-btn absolute top-2 right-2 btn btn-xs btn-ghost z-10" data-code={example.code}>
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                </svg>
              </button>
              <div class="[&_pre]:!p-4 [&_pre]:!rounded-none [&_pre]:!m-0 text-sm">
                <Code code={example.code} lang="tsx" themes={{ light: 'github-light', dark: 'github-dark' }} defaultColor={false} />
              </div>
          </div>
        </div>
      ))}
      </div>
    </section>

    <!-- API -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6">API</h2>
      <ApiTable title="Command" data={commandApi} />
      <div class="mt-6">
        <ApiTable title="CommandItemConfig" data={itemConfigApi} />
      </div>
      <div class="mt-6">
        <h3 class="text-lg font-semibold mb-2">Compound Components</h3>
        <ul class="list-disc list-inside space-y-1 text-base-content/80">
          <li><code class="bg-base-content/20 px-1 rounded">Command.List</code> - Container for groups and items</li>
          <li><code class="bg-base-content/20 px-1 rounded">Command.Group</code> - Groups items with optional heading</li>
          <li><code class="bg-base-content/20 px-1 rounded">Command.Item</code> - Selectable command item</li>
          <li><code class="bg-base-content/20 px-1 rounded">Command.Empty</code> - Shown when no results match</li>
          <li><code class="bg-base-content/20 px-1 rounded">Command.Separator</code> - Visual separator between sections</li>
        </ul>
      </div>
    </section>

    <!-- Keyboard Shortcuts -->
    <section class="mb-8">
      <h2 class="text-2xl font-bold mb-4">Keyboard Shortcuts</h2>
      <ul class="list-disc list-inside space-y-2 text-base-content/80">
        <li><kbd class="kbd kbd-sm">⌘K</kbd> / <kbd class="kbd kbd-sm">Ctrl+K</kbd> - Open command palette (customizable)</li>
        <li><kbd class="kbd kbd-sm">↑</kbd> <kbd class="kbd kbd-sm">↓</kbd> - Navigate items</li>
        <li><kbd class="kbd kbd-sm">Enter</kbd> - Select highlighted item</li>
        <li><kbd class="kbd kbd-sm">Escape</kbd> - Close palette</li>
      </ul>
    </section>

    <!-- Accessibility -->
    <section class="mb-8">
      <h2 class="text-2xl font-bold mb-4">Accessibility</h2>
      <ul class="list-disc list-inside space-y-2 text-base-content/80">
        <li>Uses native <code class="bg-base-content/20 px-1 rounded">&lt;dialog&gt;</code> element for focus trapping and ESC handling</li>
        <li>Search input has <code class="bg-base-content/20 px-1 rounded">role="combobox"</code> with proper ARIA attributes</li>
        <li>List uses <code class="bg-base-content/20 px-1 rounded">role="listbox"</code> with <code class="bg-base-content/20 px-1 rounded">role="option"</code> items</li>
        <li>Keyboard navigation with Arrow keys, Enter to select, Escape to close</li>
        <li><code class="bg-base-content/20 px-1 rounded">aria-activedescendant</code> tracks the highlighted item</li>
      </ul>
    </section>
  </div>
</Layout>

<style>
  .code-panel {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.3s ease-out;
  }
  .example-card.open .code-panel {
    max-height: 2000px;
  }
</style>

<script>
  import '../../scripts/commandDemos';

  // Toggle code visibility
  document.querySelectorAll('.toggle-code').forEach(btn => {
    btn.addEventListener('click', () => {
      const card = btn.closest('.example-card');
      if (card) {
        card.classList.toggle('open');
        const panel = card.querySelector('.code-panel');
        const tooltip = btn.closest('.tooltip');
        if (card.classList.contains('open')) {
          panel?.setAttribute('aria-hidden', 'false');
          tooltip?.setAttribute('data-tip', 'Hide code');
        } else {
          panel?.setAttribute('aria-hidden', 'true');
          tooltip?.setAttribute('data-tip', 'Show code');
        }
      }
    });
  });
</script>
